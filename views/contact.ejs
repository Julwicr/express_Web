<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/head.ejs') %>

<body>

  <%- include('./partials/nav.ejs') %>

  <canvas id="contactcanvas"></canvas>

  <div id="contact">
    <form id="form" class="form" action="https://formspree.io/f/xwkyzrnv" method="POST">
      <label>Message</label>
      <textarea class="form-input" type="text" name="message" required="required" rows="5" cols="33" maxlength="250" placeholder="Your message"></textarea>
      <label>Email</label>
      <input class="form-input" type="email" name="email" required="required" placeholder="Your email"/>
      <button class="form-button">Send message</button>
    </form>
    <p class="form-status" id="form-status"></p>
  </div>

  <%- include('./partials/footer.ejs') %>
  <script src="js/contact.js"></script>
</body>
</html>
